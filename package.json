{
  "name": "mindflow",
  "version": "1.0.0",
  "description": "Mindmap Maker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Nebula Team",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.7.0",
    "electron-builder": "^24.6.4",
    "png-to-ico": "^3.0.1"
  },
  "build": {
    "appId": "com.nebula.mind",
    "productName": "Nebula",
    "files": [
      "**/*",
      "Assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "Assets/Logo_Icon_Transparent_bg.png.png.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "Nebula-Setup-${version}.${ext}"
    },
    "fileAssociations": [
      {
        "ext": "neb",
        "name": "Nebula Mindmap",
        "role": "Editor",
        "isPackage": true
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}